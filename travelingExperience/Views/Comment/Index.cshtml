@model List<Comment>

<h2>All Comments</h2>

@if (Model != null && Model.Any())
{
    <ul>
        @foreach (var comment in Model)
        {
            <li>
                @comment.CommentText - Posted at @comment.CommentDate
                <form method="post" asp-action="DeleteComment" asp-controller="Comment">
                    <input type="hidden" name="id" value="@comment.Id" />
                    <button type="submit">Delete</button>
                </form>
            </li>
        }
    </ul>
}
else
{
    <p>No comments yet.</p>
}
