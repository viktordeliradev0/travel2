@model List<travelingExperience.Entity.Travel>

@{
    ViewData["Title"] = "Моите обяви ";
}

<h1 class="text-center">@ViewData["Title"]</h1>


<div class="container mt-4">
    @if (Model.Count > 0)
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Start Destination</th>
                        <th scope="col">End Destination</th>
                        <th scope="col">Description</th>
                        <th scope="col">Start Date</th>
                        <th scope="col">End Date</th>
                        <th scope="col">Price</th>
                        <th scope="col">Seats</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var travel in Model)
                    {
                        <tr>
                            <td>@travel.StartDestination</td>
                            <td>@travel.EndDestination</td>
                            <td>@travel.Descrition</td>
                            <td>@travel.StartDate.ToShortDateString()</td>
                            <td>@travel.EndDate.ToShortDateString()</td>
                            <td>@travel.Price</td>
                            <td>@travel.Seats</td>
                            <td>
                                <a class="btn btn-sm btn-outline-info mr-1" asp-action="Edit" asp-controller="Travel" asp-route-id="@travel.Id">Edit</a>
                                <a class="btn btn-sm btn-outline-info mr-1" asp-action="Details" asp-controller="Travel" asp-route-id="@travel.Id">Details</a>
                                <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-controller="Travel" asp-route-id="@travel.Id">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <p class="text-center">Не са намерени обяви.</p>
    }
</div>
